        statusline $nord4
        separator  $nord3

        focused_workspace  $nord14 $nord0 $nord4
        active_workspace   $nord1  $nord0 $nord4
        inactive_workspace $nord3  $nord0 $nord4
        urgent_workspace   $nord11 $nord0 $nord4
    }
}

