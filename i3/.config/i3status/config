general {
        output_format = "i3bar"
        colors = false
        interval = 5
}

order += "volume master"
order += "battery all"
order += "cpu_temperature 0"
order += "ethernet _first_"
order += "wireless wlan0"
order += "tztime local"

battery all {
  format = "B: %status %percentage %remaining"
  format_down = "No battery"
  status_chr = "CHR"
  status_bat = "BAT"
  status_unk = "UNK"
  status_full = "FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
	last_full_capacity = true
	integer_battery_capacity = true
}

tztime local {
  format = "%a %Y-%m-%d %H:%M"
	align = "left"
	min_width = 150
}

cpu_temperature 0 {
  format = "T: %degrees Â°C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
}

ethernet _first_ {
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

wireless wlan0 {
  format_up = "W: %quality at %essid, %bitrate / %frequency"
	format_down = "W: down"
	format_quality = "%03d%s"
}

volume master {
  format = "V: %volume"
  format_muted = "muted (%volume)"
  device = "pulse"
}